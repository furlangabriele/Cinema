@using Cinema.Models;
@model IEnumerable<Genere>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista dei generi</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Genere" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Crea un nuovo genere
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Nome Genere
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Genere1
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Genere" asp-action="Edit" asp-route-id="@obj.Genere1"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Genere" asp-action="Delete" asp-route-id="@obj.Genere1"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>